class Employee:
    company = "Apple"

    def show(self):
        print(f"The name is {self.name} and the company name is {self.company}")

    @classmethod
    def changeCompany(cls, new_company):
        cls.company = new_company


e1 = Employee()
e1.name = "Harry"
e1.show() 
e1.changeCompany("Tesla")
e1.show()  
print(Employee.company) 
