class Employee:
    companyName = "Apple" #class variable
    def __init__(self, name):
        self.name = name
        self.raise_amount = 0.02  #instance variable

    def showDetails(self):
        print('Name of employee: ' + self.name + ' and the raise amount is: ' + str(self.raise_amount) +'and company name is' + self.companyName )

emp1 = Employee("Harry")
emp1.raise_amount = 0.03 #instannce variable
emp1.showDetails()
