#to print number of strings present
thislist = ["apple", "banana", "cherry"]
print(len(thislist))

# can also be made using double brackets
thislist = list(("apple", "banana", "cherry")) # note the double round-brackets
print(thislist)

#Return the third, fourth, and fifth item:
thislist = ["apple", "banana", "cherry", "orange", "kiwi", "melon", "mango"]
print(thislist[2:5])

#example
thislist = ["apple", "banana", "cherry", "orange", "kiwi", "melon", "mango"]
print(thislist[-4:-1])

#to check if item is present in list
thislist = ["apple", "banana", "cherry"]
if "apple" in thislist:
  print("Yes, 'apple' is in the fruits list")

# to change item value
thislist = ["apple", "banana", "cherry"]
thislist[1] = "blackcurrant"
print(thislist)

# to change range
thislist = ["apple", "banana", "cherry", "orange", "kiwi", "mango"]
thislist[1:3] = ["blackcurrant", "watermelon"]
print(thislist)

# to insert value
thislist = ["apple", "banana", "cherry"]
thislist.insert(2, "watermelon")
print(thislist)


# to add 
thislist = ["apple", "banana", "cherry"]
thislist.append("orange")
print(thislist)

# to combine lists
thislist = ["apple", "banana", "cherry"]
tropical = ["mango", "pineapple", "papaya"]
thislist.extend(tropical)
print(thislist)

# to remove the 2nd element from list
th islist = ["apple", "banana", "cherry"]
thislist.pop(2)
print(thislist)


#items in the list, one by one
thislist = ["apple", "banana", "cherry"]
for x in thislist:
  print(x)

#USING WHILE LOOP
thislist = ["apple", "banana", "cherry"]
i = 0
while i < len(thislist):
    print(thislist[i])
    i = i + 1

#sort the list
thislist = ["orange", "mango", "kiwi", "pineapple", "banana"]
thislist.sort()
print(thislist)

#sort the list in reverse
thislist = ["orange", "mango", "kiwi", "pineapple", "banana"]
thislist.sort(reverse = True)
print(thislist)














