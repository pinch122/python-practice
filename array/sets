# to print number of elements present
thisset = {"apple", "banana", "cherry"}
print(len(thisset))

# can also be made using double brackets
thisset = set(("apple", "banana", "cherry")) # note the double round-brackets
print(thisset)

# to check if item is present in set
thisset = {"apple", "banana", "cherry"}
if "apple" in thisset:
  print("Yes, 'apple' is in the fruits set")

# to add an item to the set
thisset = {"apple", "banana", "cherry"}
thisset.add("orange")
print(thisset)

# to add multiple items to the set
thisset = {"apple", "banana", "cherry"}
thisset.update(["orange", "mango", "grapes"])
print(thisset)

# to remove an item from the set
thisset = {"apple", "banana", "cherry"}
thisset.remove("banana")
print(thisset)

# to remove an item from the set without raising an error if the item doesn't exist
thisset = {"apple", "banana", "cherry"}
thisset.discard("banana")
print(thisset)

# to iterate over the items in the set
thisset = {"apple", "banana", "cherry"}
for x in thisset:
  print(x)

# to join two sets
set1 = {"apple", "banana", "cherry"}
set2 = {"pineapple", "mango", "papaya"}
set1.update(set2)
print(set1)

# to find the union of two sets
set1 = {"apple", "banana", "cherry"}
set2 = {"pineapple", "mango", "papaya"}
set3 = set1.union(set2)
print(set3)

# to find the intersection of two sets
set1 = {"apple", "banana", "cherry"}
set2 = {"banana", "mango", "papaya"}
set3 = set1.intersection(set2)
print(set3)

# to find the difference between two sets
set1 = {"apple", "banana", "cherry"}
set2 = {"banana", "mango", "papaya"}
set3 = set1.difference(set2)
print(set3)

# to find the symmetric difference between two sets
set1 = {"apple", "banana", "cherry"}
set2 = {"banana", "mango", "papaya"}
set3 = set1.symmetric_difference(set2)
print(set3)

# to clear the set
thisset = {"apple", "banana", "cherry"}
thisset.clear()
print(thisset)
